{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "module": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "ts/build",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src/**/*",
    "bindings.d.ts",
    ".next/types/**/*.ts"
, "__test__/performer.test.js"  ],
  "exclude": [
    "node_modules"
  ]
}
